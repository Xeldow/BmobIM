<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/left_head_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/ic_menu_compass" />

        <TextView
            android:id="@+id/left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/left_head_img"
            android:text="服务器"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_name"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/left_head_img"
            android:background="@drawable/msg_left_bg"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textColor="#fff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_head_img"
            android:text="用户"
            android:textSize="18sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/right_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/right_name"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/right_head_img"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/right_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_name"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/right_head_img"
            android:background="@drawable/msg_right_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/right_head_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />

    </RelativeLayout>


</LinearLayout>